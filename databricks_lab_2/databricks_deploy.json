{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "String",
            "defaultValue": ""
        },
        "subnetName": {
            "type": "string",
            "defaultValue": ""
        },
        "clientAddressPrefix": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "functions": [],
    "variables": {
        "tags": {
            "Department": "it",
            "Team": "networking",
            "Environment": "sandbox",
            "Application": "databricks"
        },
        "clientVnetName": "[concat(parameters('subnetName'),'-client-vnet')]",
        "clientNetworkSecurityGroupName": "[concat(parameters('subnetName'),'-client-nsg')]"
    },
    "resources": [
        {
            // create databricks-client-vnet
            "name": "[variables('clientVnetName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": "[variables('tags')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('clientAddressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetName')]",
                        "properties": {
                            "addressPrefix": "10.10.1.0/24",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups',variables('clientNetworkSecurityGroupName'))]"
                            }
                        }
                    },
                    {
                        "name": "GatewaySubnet",
                        "properties": { "addressPrefix": "10.10.0.0/24" }
                    }
                ]
            }
        }

    ],
    "outputs": {

    }
}