{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminPassword": {
            "type": "string",
            "defaultValue": ""
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "sfcadmin"
        },
        "location": {
            "type": "string",
            "defaultValue": "westus"
        },
        "osDiskType": {
            "type": "string",
            "defaultValue": "Standard_LRS"
        },
        "testMachineName": {
            "type": "string",
            "defaultValue": "certhost",
            "metadata":{
                "description": "The name of the virtual machine"
            }
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue":"Standard_B2s",
            "allowedValues": [
                "Standard_B1s",
                "Standard_B2s",
                "Standard_B2ms",
                "Standard_DS1_v2",
                "Standard_DS2_v3"
            ]
        },
        "storageUri": {
            "type": "string",
            "defaultValue": "https://aw3lpalsfwiwokmuoksa.blob.core.windows.net/"
        },
        "subnetID": {
            "type": "string",
            "defaultValue": "/subscriptions/17df786b-c9ea-4f50-9cb0-57b80e526f55/resourceGroups/fwlab-sandbox-rg/providers/Microsoft.Network/virtualNetworks/fwlab-sandbox-vnet/subnets/firewall-management-sandbox"
        }
    },
    "functions": [],
    "variables": {
        "tags": {
            "Department": "it",
            "Team": "networking",
            "Environment": "sandbox",
            "Application": "network"
        }
    },
    "resources": [
        {
            //    network interface
            //
            "condition": true,
            "name": "[concat(parameters('testMachineName'),'-nic')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-11-01",
            "location": "[parameters('location')]",
            "tags": "[variables('tags')]",
            "dependsOn": [],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[parameters('subnetID')]"
                            },
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ]
            }
        },
        {
            //  virtual machine
            //
            "condition": true,
            "name": "[parameters('testMachineName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2021-03-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('testMachineName'),'-nic'))]"
            ],
            "tags": "[variables('tags')]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('osDiskType')]"
                        }
                    },
                    "imageReference": {
                        "publisher": "Oracle",
                        "offer": "Oracle-Linux",
                        "sku": "ol86-lvm-gen2",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {"id": "[resourceId('Microsoft.Network/networkInterfaces',concat(parameters('testMachineName'),'-nic'))]" }
                    ]
                },
                "osProfile": {
                    "computerName": "[parameters('testMachineName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "linuxConfiguration": {
                        "patchSettings": {
                            "patchMode": "ImageDefault"
                        }
                    }
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[parameters('storageUri')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "certhost.username": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Compute/virtualMachines',parameters('testMachineName'))).osProfile.adminUsername]"
        }
    }
}